---
import Layout from '~/layouts/LandingLayout.astro';

import Hero from '~/components/widgets/Hero.astro';
import Features2 from '~/components/widgets/Features2.astro';
import Stats2 from '~/components/widgets/Stats2.astro';
import Steps2 from '~/components/widgets/Steps2.astro';
import CallToAction from '~/components/widgets/CallToAction.astro';

const metadata = {
  title: 'Product Details Landing Page Demo',
};
---

<Layout metadata={metadata}>
  <!-- Hero Widget ******************* -->

  <Hero
    tagline="Product Details Demo"
    title="Product Landing Page: Showcase with Precision and Passion!"
    subtitle="Step-by-step guide to designing a Landing Page that highlights every facet of your product or service."
    actions={[
      { variant: 'primary', text: 'Call to Action', href: '#', icon: 'tabler:square-rounded-arrow-right' },
      { text: 'Learn more', href: '#' },
    ]}
    image={{
      src: 'https://images.unsplash.com/photo-1473188588951-666fce8e7c68?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=2174&q=80',
      alt: 'A spotlight on a product. Product Details Landing Page Demo',
    }}
  />

  <!-- Features Widget *************** -->

  <Features2
    headline={{
      title: 'Discover the Essence of Our Product',
      subtitle:
        'A deep dive into the features that make our product stand out. Explore the innovation, design, and functionality that sets us apart.',
      tagline: 'Features',
    }}
    items={[
      {
        title: 'Sleek & Modern Design',
        description:
          'A contemporary design that is not only visually appealing but also intuitive and user-friendly.',
        icon: 'tabler:palette',
      },
      {
        title: 'Advanced Customization',
        description:
          'Tailor the product to your specific needs with a wide range of customization options and settings.',
        icon: 'tabler:settings',
      },
      {
        title: 'High-Quality Performance',
        description:
          'Experience lightning-fast performance and reliability, ensuring a smooth and seamless user experience.',
        icon: 'tabler:rocket',
      },
      {
        title: 'Dedicated Support',
        description: 'Our team is always here to help. Get instant support and guidance whenever you need it.',
        icon: 'tabler:headset',
      },
      {
        title: 'Cross-Platform Compatibility',
        description:
          'Access our product from anywhere, on any device. Fully responsive and compatible with all major platforms.',
        icon: 'tabler:device-desktop-analytics',
      },
      {
        title: 'Secure & Private',
        description:
          'Your data is safe with us. We prioritize your privacy and security with top-tier encryption and protocols.',
        icon: 'tabler:lock',
      },
    ]}
  />

  <!-- Stats Widget ****************** -->

  <Stats2
    headline={{
      title: 'Trusted by Millions',
      subtitle:
        'Join a global community of users who trust our product for its reliability, performance, and innovation. Here are some of our key metrics.',
    }}
    stats={[
      { amount: '1M+', title: 'Active Users' },
      { amount: '4.8/5', title: 'User Rating' },
      { amount: '100K+', title: '5-Star Reviews' },
      { amount: '99.9%', title: 'Uptime' },
    ]}
  />

  <!-- Steps Widget ****************** -->

  <Steps2
    headline={{
      title: 'Streamline Your Workflow with Our Product',
      subtitle:
        'Our product is designed to simplify your tasks and boost your productivity. Follow these simple steps to get started and make the most of our innovative features.',
    }}
    items={[
      {
        title: 'Step 1: <span class="font-medium">Easy Sign-Up</span>',
        description:
          'Getting started is a breeze. Sign up in minutes and gain instant access to all our premium features.',
        icon: 'tabler:arrow-down-right',
      },
      {
        title: 'Step 2: <span class="font-medium">Customize Your Profile</span>',
        description:
          'Personalize your experience. Set up your profile, preferences, and settings to match your workflow.',
        icon: 'tabler:arrow-down-right',
      },
      {
        title: 'Step 3: <span class="font-medium">Explore & Integrate</span>',
        description:
          'Dive into our features and integrate with your favorite tools. Discover how our product can transform your work.',
        icon: 'tabler:arrow-down-right',
      },
      {
        title: 'Step 4: <span class="font-medium">Achieve & Grow</span>',
        description:
          'You are all set up. Start achieving your goals and watch your productivity soar. We are here to support your growth.',
        icon: 'tabler:check',
      },
    ]}
    image={{
      src: 'https://images.unsplash.com/photo-1590402494587-44b71d7772f6?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=1632&q=80',
      alt: 'Steps Tracking',
    }}
  />

  <!-- CallToAction Widget *********** -->

  <CallToAction
    actions={[
      {
        variant: 'primary',
        text: 'Download Template',
        href: 'https://github.com/onwidget/astrowind',
        icon: 'tabler:download',
      },
    ]}
  >
    <template slot="title">
      Astrowind awaits <br class="block sm:hidden" /><span class="sm:whitespace-nowrap">for your project</span>
    </template>

    <template slot="subtitle">
      Astro + Tailwind CSS + TypeScript + Naming conventions + Dark mode... <br class="hidden md:inline" /> Everything you
      need to get started with your project.
    </template>
  </CallToAction>
</Layout>
