---
import Layout from '../../layouts/Layout.astro';
import { UserButton } from '@clerk/astro/components';

const { userId } = Astro.locals.auth();

---
<Layout title="Account Profile">
  <main class="container mx-auto px-4 py-8">
    <div class="flex justify-between items-center mb-8">
      <h1 class="text-3xl font-bold">Your Account</h1>
      <UserButton afterSignOutUrl="/" />
    </div>

    <div class="bg-white shadow-md rounded-lg p-6 mb-8">
      <h2 class="text-2xl font-semibold mb-4">Profile</h2>
      <p><strong>Username:</strong> {userId}</p>
      <p><strong>Email:</strong> {userId}</p>
    </div>

    <div class="bg-white shadow-md rounded-lg p-6">
      <h2 class="text-2xl font-semibold mb-4">Characters</h2>
      <p class="mb-4">You have no characters yet.</p>
      <a href="/account/character/create" class="bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded">
        Create New Character
      </a>
    </div>

    <div class="mt-8">
        <h2 class="text-2xl font-semibold mb-4">Account Management</h2>
        <a href="/account/settings" class="text-blue-500 hover:underline">Manage Account Settings</a>
    </div>
  </main>
</Layout>