<style>
  .home-buttons-container {
    display: flex;
    justify-content: space-around;
    padding: 20px;
    background-color: #111;
    background-image: url('data:image/svg+xml;base64,PHN2ZyB4bWxucz0iaHR0cDovL3d3dy53My5vcmcvMjAwMC9zdmciIHdpZHRoPSIzMiIgaGVpZ2h0PSIzMiIgdmlld0JveD0iMCAwIDMyIDMyIj48cGF0aCBmaWxsPSIjMjIyIiBkPSJNMCAwIEwxNiAxNiBMMCAzMiBaIE0xNiAxNiBMMzIgMCBMMzIgMzIgWiIvPjwvc3ZnPg==');
  }
  .home-button {
    display: flex;
    align-items: center;
    justify-content: center;
    background-color: #000;
    border: 1px solid #444;
    border-radius: 10px;
    color: #fff;
    text-decoration: none;
    width: 23%;
    height: 100px;
    transition: background-color 0.3s;
  }
  .home-button:hover {
    background-color: #333;
  }
  .home-button-content {
    display: flex;
    align-items: center;
    justify-content: space-between;
    width: 100%;
    padding: 0 20px;
  }
  .home-button-text {
    display: flex;
    align-items: center;
    font-size: 16px;
    font-weight: bold;
    text-align: left;
    flex-grow: 1;
    color: white;
    height: 100%;
  }
  .home-button-image {
    width: 60px;
    height: 60px;
    object-fit: cover;
    border-radius: 50%;
  }
</style>
