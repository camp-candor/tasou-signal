---
import WidgetWrapper from '~/components/ui/WidgetWrapper.astro';
import Button from '~/components/ui/Button.astro';
import { Image } from 'astro:assets';
import dragonlance from '~/assets/images/dragonlance.jpg';
import bigby from '~/assets/images/bigby.jpg';
import vecna from '~/assets/images/vecna.jpg';

const posts = [
  {
    img: vecna,
    date: 'April 21, 2024',
    author: 'D&D Beyond Staff',
    title: 'Vecna, the Lich Lord',
    href: '/terms',
  },
  {
    img: dragonlance,
    date: 'April 21, 2024',
    author: 'D&D Beyond Staff',
    title: 'Dragonlance: Shadow of the Dragon Queen',
    href: '/terms',
  },
  {
    img: bigby,
    date: 'April 21, 2024',
    author: 'D&D Beyond Staff',
    title: 'Bigby Presents: Glory of the Giants',
    href: '/terms',
  },
  {
    img: vecna,
    date: 'April 21, 2024',
    author: 'D&D Beyond Staff',
    title: 'Vecna, the Lich Lord',
    href: '/terms',
  },
  {
    img: dragonlance,
    date: 'April 21, 2024',
    author: 'D&D Beyond Staff',
    title: 'Dragonlance: Shadow of the Dragon Queen',
    href: '/terms',
  },
  {
    img: bigby,
    date: 'April 21, 2024',
    author: 'D&D Beyond Staff',
    title: 'Bigby Presents: Glory of the Giants',
    href: '/terms',
  },
];
---

<WidgetWrapper containerClass="dnd-blog-container">
  <div class="dnd-blog-grid">
    {
      posts.map((post) => (
        <a href={post.href} class="dnd-blog-card">
          <div class="dnd-blog-card-image-container">
            <Image src={post.img} alt={post.title} class="dnd-blog-card-img" />
            <div class="dnd-blog-card-date">{post.date}</div>
          </div>
          <div class="dnd-blog-card-content">
            <p class="dnd-blog-card-meta">{post.author}</p>
            <h3 class="dnd-blog-card-title">{post.title}</h3>
          </div>
        </a>
      ))
    }
  </div>
  <div class="dnd-blog-button-container">
    <Button href="/terms" variant="primary" class="dnd-blog-button">SEE ALL POSTS</Button>
  </div>
</WidgetWrapper>

<style>
  .dnd-blog-container {
    background-color: #000;
    color: #fff;
    padding: 2rem 0;
  }
  .dnd-blog-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
    gap: 1.5rem;
    margin-bottom: 2rem;
  }
  .dnd-blog-card {
    background-color: #1a1a1a;
    border-radius: 0.5rem;
    overflow: hidden;
    text-decoration: none;
    color: #fff;
    transition: transform 0.2s;
  }
  .dnd-blog-card:hover {
    transform: scale(1.05);
  }
  .dnd-blog-card-image-container {
    position: relative;
  }
  .dnd-blog-card-img {
    width: 100%;
    height: 200px;
    object-fit: cover;
  }
  .dnd-blog-card-date {
    position: absolute;
    top: 0.5rem;
    right: 0.5rem;
    background-color: rgba(0, 0, 0, 0.7);
    color: #fff;
    padding: 0.25rem 0.5rem;
    border-radius: 0.25rem;
    font-size: 0.875rem;
  }
  .dnd-blog-card-content {
    padding: 1rem;
  }
  .dnd-blog-card-meta {
    font-size: 0.875rem;
    color: #aaa;
    margin-bottom: 0.5rem;
  }
  .dnd-blog-card-title {
    font-size: 1.25rem;
    font-weight: bold;
  }
  .dnd-blog-button-container {
    text-align: center;
  }
  .dnd-blog-button {
    background-color: #d92323;
    color: #fff;
    font-weight: bold;
    padding: 0.75rem 2rem;
    border-radius: 0.25rem;
    text-transform: uppercase;
  }
</style>
