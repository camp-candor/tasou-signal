---
// src/components/widgets/TestamentPlaceholder.astro
---

<div class="testament-placeholder-card">
  <div class="text-block blurred-text"></div>
  <div class="image-block"></div>
  <div class="text-block blurred-text"></div>
</div>

<style>
  .testament-placeholder-card {
    background: url('/assets/images/placeholders/stained-paper.png') no-repeat center center;
    background-size: cover;
    padding: 1.5rem;
    box-shadow: 2px 2px 15px rgba(0, 0, 0, 0.5);
    border: 1px solid rgba(0, 0, 0, 0.2);
    display: flex;
    flex-direction: column;
    gap: 1rem;
    animation: pulse 2s infinite ease-in-out;
  }

  .text-block {
    height: 1rem;
    background-color: rgba(0, 0, 0, 0.1);
  }

  .blurred-text {
    opacity: 0.2;
    filter: blur(2px);
  }

  .image-block {
    height: 10rem;
    background: rgba(0, 0, 0, 0.7);
    background-image: url('/assets/images/placeholders/crosshatch.png');
  }

  @keyframes pulse {
    0% {
      opacity: 0.6;
    }
    50% {
      opacity: 0.4;
    }
    100% {
      opacity: 0.6;
    }
  }
</style>
