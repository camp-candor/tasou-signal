---
// src/layouts/AlmanacLayout.astro
---

<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>The Blackwood Parish Almanac</title>
  </head>
  <body>
    <main class="almanac-content">
      <slot />
      <!-- This is where page content will go -->
    </main>

    <!-- SVG filter for magnifying glass distortion -->
    <svg style="position: absolute; width: 0; height: 0; overflow: hidden;" xmlns="http://www.w3.org/2000/svg">
      <defs>
        <filter id="magnify-distortion">
          <feTurbulence type="fractalNoise" baseFrequency="0.1" numOctaves="3" result="noise"></feTurbulence>
          <feDisplacementMap in="SourceGraphic" in2="noise" scale="15" xChannelSelector="R" yChannelSelector="G"
          ></feDisplacementMap>
        </filter>
      </defs>
    </svg>
  </body>
</html>
